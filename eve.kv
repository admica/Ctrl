<Img@Image>:
    center_x: self.parent.center_x
    center_y: self.parent.center_y
    allow_stretch: False

<Butt@Button>:
    font_size: 28
    color: 0.95, 0.95, 0.95, 1.0
    size_hint: (.124,None)
    height: self.width

<RootWidget>:
    setup_ww: (root.width/9.0)
    setup_hh: (root.height/9.0)

    ww: (root.width/8.0)
    hh: (root.height/5.0)

    offw: (root.width/8.0)/10.0
    offh: (root.height/5.0)/10.0

    ScreenManager:
        id: screenmgr
        Screen:
            name: "screen_setup"
            Label:
                id: label_heading
                text: "Enter ip/name and port of PC to control."
                font_size: 28
                size_hint: (None,None)
                size: 500,50
                pos: root.setup_ww, root.setup_hh*5
                background_normal: "./images/arcade_button_box_black.png"

            Label:
                id: label_host
                text: "Host:"
                font_size: 26
                size_hint: (None,None)
                size: 250,50
                pos: root.setup_ww, root.setup_hh*7

            Label:
                id: label_port
                text: "Port:"
                font_size: 26
                size_hint: (None,None)
                size: 250,50
                pos: root.setup_ww, root.setup_hh*6

            TextInput:
                id: input_host
                text: root.host
                font_size: 26
                size_hint: (None,None)
                size: 250,50
                pos: root.setup_ww+label_host.width, root.setup_hh*7
                multiline: False
                padding_x: 17
                padding_y: 8
                background_normal: "./images/arcade_button_box_white.png"
                background_active: "./images/arcade_button_box_white.png"
                on_text: root.cb_label_host_text(self.text)

            TextInput:
                id: input_port
                text: str(root.port)
                font_size: 26
                size_hint: (None,None)
                size: 250,50
                multiline: False
                padding_x: 17
                padding_y: 8
                pos: root.setup_ww+label_host.width, root.setup_hh*6
                background_normal: "./images/arcade_button_box_white.png"
                background_active: "./images/arcade_button_box_white.png"
                on_text: root.cb_label_port_text(self.text)

            Button:
                id: button_connect
                text: "Connect"
                font_size: 26
                size_hint: (None,None)
                size: 250,50
                pos: root.setup_ww+label_host.width, root.setup_hh*4
                on_press: root.cb_button_connect_press()
                background_normal: "./images/arcade_button_box_blue.png"
                background_down: "./images/arcade_button_box_blue.png"

        Screen:
            name: "screen_connecting"
            Label:
                id: label_connecting
                text: "Connecting..."
                font_size: 28

        Screen:
            name: "screen_main"
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "images/bg.png"
            Butt:
                id: b1
                text: "H1"
                pos: root.ww*0, root.height-root.hh*3
                background_normal: "./images/arcade_red1.png"
                background_down: "./images/arcade_red2.png"
                on_press: root.cb_press("f1")
            Butt:
                id: b2
                text: "H2"
                pos: root.ww*1, root.height-root.hh*3
